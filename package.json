{
  "name": "@drops-developers/intersection",
  "version": "0.12.1",
  "description": "Drops payload types between frontent and backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "tslint": "tslint --project tsconfig.json --exclude '**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/languagedrops/intersection.git"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "jest": "^23.1.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.7.0",
    "tslint-no-circular-imports": "^0.2.0",
    "tslint-react": "^3.2.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "bail": true,
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/(tests|e2e)/.*\\.(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": false
      }
    }
  },
  "bugs": {
    "url": "https://github.com/languagedrops/intersection/issues"
  },
  "homepage": "https://github.com/languagedrops/intersection#readme",
  "author": "drops-developers",
  "license": "ISC"
}
